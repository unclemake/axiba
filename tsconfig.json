{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "es2015.promise",
      "dom"
    ],
    "module": "commonjs",
    "watch": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "isolatedModules": true,
    "noImplicitUseStrict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "assets/components/*"
      ]
    }
  }
}